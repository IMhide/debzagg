<div class="header ">
  <!-- START MOBILE SIDEBAR TOGGLE -->
  <a href="#" class="btn-link toggle-sidebar d-lg-none pg-icon btn-icon-link" data-toggle="sidebar">
    menu</a>
  <!-- END MOBILE SIDEBAR TOGGLE -->
  <div class="">
    <div class="brand inline">
      <%= link_to root_path do %>
        <%= image_tag('debzagg.png', alt: 'debzagg logo', width: 129, height: 23) %>
      <% end %>
    </div>
    <!-- START NOTIFICATION LIST -->
    <% if user_signed_in? %>
      <ul class="d-lg-inline-block d-none notification-list no-margin d-lg-inline-block b-grey b-l b-r no-style p-l-20 p-r-20">
        <li class="p-r-5 inline">
          <%= link_to "Mes evenements", events_path %>
        </li>
      </ul>
    <% end %>

    <a href="#" class="search-link d-lg-inline-block d-none" data-toggle="search"><i class="pg-icon">search</i>Type anywhere to <span class="bold">search</span></a>
  </div>

  <div class="d-flex align-items-center">
    <% if user_signed_in? %>
      <!-- START User Info-->
      <div class="dropdown pull-right d-lg-block d-none">
        <button class="profile-dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" aria-label="profile dropdown">
          <span class="thumbnail-wrapper d32 circular inline">
            <img src="<%= current_user.safe_profil_picture_url %>" alt="<%= current_user.safe_profil_picture_url %>" data-src="<%= current_user.safe_profil_picture_url %>" data-src-retina="" width="32" height="32">
          </span>
        </button>
        <div class="dropdown-menu dropdown-menu-right profile-dropdown" role="menu">
          <a href="#" class="dropdown-item"><span>Bonjour, <br /><b><%= current_user.full_nick %></b></span></a>
          <div class="dropdown-divider"></div>
          <%= link_to 'Voir mon profil', user_path(current_user), class:'dropdown-item' %>
          <div class="dropdown-divider"></div>
          <%= link_to 'Editer mon profil', edit_user_registration_path, class:'dropdown-item' %>
          <%= link_to 'Changer mon mot de passe', change_password_path, class:'dropdown-item' %>
          <div class="dropdown-divider"></div>
          <%= link_to 'Deconnexion', destroy_user_session_path, class:'dropdown-item', method: :delete %>
        </div>
      </div>
      <!-- END User Info-->
    <% else %>
      <div class="dropdown pull-right d-lg-block d-none">
        <ul class="d-lg-inline-block d-none notification-list no-margin d-lg-inline-block  no-style p-l-20 p-r-20">
          <li class="p-r-5 inline">
            <button class="btn btn-default">
              <%= link_to 'Se connecter', new_user_session_path %>
            </button>
          </li>

          <li class="p-r-5 inline">
            <button class="btn btn-primary">
              <%= link_to "S'inscrire", new_user_registration_path, class: 'text-white' %>
            </button>
          </li>
        </ul>
      </div>
    <% end %>
  </div>
</div>
<!-- END HEADER -->
