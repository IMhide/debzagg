<div class="register-container full-height sm-p-t-30">
  <div class="d-flex justify-content-center flex-column full-height">
    <img src="<%= image_url('debzagg_tr_black.png')%>" alt="logo" data-src="<%= image_url('debzagg_tr_black.png')%>" data-src-retina="<%= image_url('debzagg_tr_black.png')%>" height=47 width=257> 
    <h3>Votre pas le plus important dans l'e-sport se trouve apres cette inscription</h3>
    <p>
    Tu as déjà un compte ? <%= link_to 'Connecte toi', new_user_session_path, class: 'text-info' %> 
    </p>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'p-t-15') do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="row">
        <div class='col-md-6'>
          <div class="form-group form-group-default">
            <%= f.label :firstname%>
            <%= f.text_field :firstname, autofocus: true, class:'form-control', required: true %>
          </div>
        </div>
        <div class='col-md-6'>
          <div class="form-group form-group-default">
            <%= f.label :lastname%>
            <%= f.text_field :lastname, class:'form-control', required: true %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class='col-md-4'>
          <div class="form-group form-group-default">
            <%= f.label :tag%>
            <%= f.text_field :tag, class:'form-control' %> 
          </div>
        </div>
        <div class='col-md-8'>
          <div class="form-group form-group-default">
            <%= f.label :nickname%>
            <%= f.text_field :nickname, class:'form-control', required: true %>
          </div>
        </div>
      </div>
 
      <div class="row">
        <div class="col-md-12">
          <div class="form-group form-group-default">
            <%= f.label :birthdate %>
            <%= f.date_field :birthdate, class:'form-control', required: true %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class='col-md-6'>
          <div class="form-group form-group-default" style="height: 85%">
            <%= f.label :city%>
            <%= f.text_field :city, class:'form-control' %>
          </div>
        </div>
        <div class='col-md-6'>
          <div class="form-group form-group-default">
            <%= f.label :country %>
            <%= f.select :country, Country.all.map(&:name), {}, {id: 'country_select' ,class:'form-control', 'data-init-plugin': "select2", required: true} %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="form-group form-group-default">
            <%= f.label :email %>
            <%= f.email_field :email, autocomplete: "email", class:'form-control', required: true %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="form-group form-group-default">
            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', required: true %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="form-group form-group-default">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form-control', require: true %>
          </div>
        </div>
      </div>
      <div class="row m-t-10">
        <div class="col-lg-6">
          <p><small>I agree to the <a href="#" class="text-info">Pages Terms</a> and <a href="#" class="text-info">Privacy</a>.</small></p>
        </div>
      </div>
      <%= f.submit "Cree son compte", class: 'btn btn-primary btn-cons m-t-10' %>
    <% end %>
  </div>
</div>

