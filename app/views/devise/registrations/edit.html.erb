<div class="register-container full-height sm-p-t-30">
  <div class="d-flex justify-content-center flex-column full-height">
    <h3>Edite ton profil</h3>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, class: 'p-t-15 dropzone') do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="row">
        <div class='col-md-6'>
          <div class="form-group form-group-default">
            <div class="fallback">
              <%= f.label :profil_picture %>
              <%= f.file_field :profil_picture %>
            </div>
          </div>
        </div>
        <div class='col-md-6'>
          <div class="form-group form-group-default">
            <div class="fallback">
              <%= f.label :cover_picture %>
              <%= f.file_field :cover_picture %>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class='col-md-6'>
          <div class="form-group form-group-default">
            <%= f.label :firstname%>
            <%= f.text_field :firstname, autofocus: true, class:'form-control', required: true %>
          </div>
        </div>
        <div class='col-md-6'>
          <div class="form-group form-group-default">
            <%= f.label :lastname%>
            <%= f.text_field :lastname, class:'form-control', required: true %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class='col-md-4'>
          <div class="form-group form-group-default">
            <%= f.label :tag%>
            <%= f.text_field :tag, class:'form-control', required: true %>
          </div>
        </div>
        <div class='col-md-8'>
          <div class="form-group form-group-default">
            <%= f.label :nickname%>
            <%= f.text_field :nickname, class:'form-control', required: true %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="form-group form-group-default">
            <%= f.label :birthdate %>
            <%= f.date_field :birthdate, class:'form-control', required: true %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class='col-md-6'>
          <div class="form-group form-group-default" style="height: 85%">
            <%= f.label :city%>
            <%= f.text_field :city, class:'form-control' %>
          </div>
        </div>
        <div class='col-md-6'>
          <div class="form-group form-group-default">
            <%= f.label :country %>
            <%= f.select :country, Country.all.map(&:name), {}, {id: 'country_select' ,class:'form-control', 'data-init-plugin': "select2", required: true} %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="form-group form-group-default">
            <%= f.label :email %>
            <%= f.email_field :email, autocomplete: "email", class:'form-control', required: true %>
          </div>
        </div>
      </div>
  </div>
  <%= f.submit "Editer mon compte", class: 'btn btn-primary btn-cons m-t-10' %>
<% end %>
</div>
</div>

<%= link_to "Back", :back %>
